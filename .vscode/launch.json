    "version": "0.2.0",
    "configurations": [
        {
            "name": "verify",
            "env": {
                "AWS_REGION": "us-east-1",
                "AWS_ACCESS_KEY_ID": "test",
                "AWS_SECRET_ACCESS_KEY": "test",
                "AWS_ENDPOINT_URL": "http://localhost:4566/"
            },
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-l",
                "debug",
                "verify",
                "-r",
                "test/root.json",
                "-f",
                "test/hello.txt"
            ]
        },
        {
            "name": "verify kms",
            "env": {
                "AWS_REGION": "us-east-1",
                "AWS_ACCESS_KEY_ID": "test",
                "AWS_SECRET_ACCESS_KEY": "test",
                "AWS_ENDPOINT_URL": "http://localhost:4566/"
            },
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "-l",
                "debug",
                "verify",
                "-p",
                "test/policy-hello-signed.json",
                "-a",
                "test/release-hello.json",
                "--verifier-kms-ref=awskms:///arn:aws:kms:us-east-1:000000000000:alias/aws-kms-keyid-test",
                "-f",
                "test/hello.txt",
            ]
        }
    ]
}